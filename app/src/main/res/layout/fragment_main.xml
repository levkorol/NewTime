<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?light"
    android:orientation="vertical"
    tools:context=".ui.main.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:text="Пн, 12 января"
            android:textColor="?middle_d"
            android:textStyle="bold" />

        <TextView
            style="@style/TextGraySmall"
            android:layout_width="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="-4dp"
            android:text="5 привычек | 5 задач" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="?middle_d"
            app:fabSize="mini"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <TextView
        style="@style/TextNormal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/habits" />

    <ProgressBar
        android:id="@+id/habits_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar_habit" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/habits_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        style="@style/TextNormal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/tasks" />


    <ProgressBar
        android:id="@+id/mf_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:progress="80"
        android:progressDrawable="@drawable/progress_bar_task" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="8dp"
        android:text="cегодня                                                                        месяц"
        android:textColor="@color/green" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />


</LinearLayout>