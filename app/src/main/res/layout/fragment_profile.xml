<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/VerticalLinearLayout"
    tools:background="@color/bg_tools_fg"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        style="@style/VerticalLinearLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white">

        <TextView
            style="@style/TextTitle"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_info"
            android:drawableEnd="@drawable/ic_edit"
            android:text="Сферы жизни"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextCategoryProfile"
            android:text="Личная жизнь 1/100"/>

        <SeekBar
            style="@style/MySeekBar" />

        <TextView
            style="@style/TextCategoryProfile"
            android:text="Здоровье 1/100"/>
        <SeekBar
            style="@style/MySeekBar"/>

        <TextView
            style="@style/TextCategoryProfile"
            android:text="Работа 1/100"/>
        <SeekBar
            style="@style/MySeekBar"/>

        <TextView
            style="@style/TextCategoryProfile"
            android:text="Саморазвитие 1/100"/>
        <SeekBar
            style="@style/MySeekBar"/>
        <TextView
            style="@style/TextCategoryProfile"
            android:text="Отдых 1/100"/>
        <SeekBar
            style="@style/MySeekBar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/radarChart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="26dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_white">


        <TextView
            android:id="@+id/menu_pro"
            style="@style/MenuItemProfile"
            android:text="@string/menu_premium"
            android:drawableStart="@drawable/ic_crown"/>
        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/menu_lock"
            android:drawableStart="@drawable/ic_lock"/>
        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/menu_statistic"
            android:drawableStart="@drawable/ic_stats"/>
        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/menu_star"
            android:drawableStart="@drawable/ic_heart"/>
        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/menu_data"
            android:drawableStart="@drawable/ic_cloud_download"/>
        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/newfocus"
            android:drawableStart="@drawable/ic_time_oclock"/>

        <TextView
            style="@style/MenuItemProfile"
            android:text="@string/pro_settings"
            android:drawableStart="@drawable/ic_settings"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>