<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?middle</item>
        <item name="colorPrimaryVariant">?middle_d</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?darker</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="VerticalLinearLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalLinearLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextNormal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="MenuItemTextWithDrawable" parent="TextNormal">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">16dp</item>
        <item name="background">?selectableItemBackground</item>
    </style>

    <style name="TextGraySmall">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/gray_dark_30</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AddOrEditFieldTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/bg_white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EditTextFieldsAddOrEdit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="EditTextDesc" parent="EditTextFieldsAddOrEdit">
        <item name="android:gravity">top|start</item>
        <item name="android:hint">@string/desc</item>
        <item name="android:lines">3</item>
    </style>

    <style name="EditTextDrawableAddOrEdit" parent="EditTextFieldsAddOrEdit">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!--    bottom_menu-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--    bottom_menu-->
    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="ButtonToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    themes-->
    <attr name="darker"
        format="color"/>
    <attr name="middle"/>
    <attr name="middle_d"/>
    <attr name="middle_l"/>
    <attr name="light"/>

    <style name="RedTheme">
        <item name="darker">#230309</item>
        <item name="middle">#fe2c55</item>
        <item name="middle_d">#C5556A</item>
        <item name="middle_l">#C8AAAF</item>
        <item name="light">#EFE2E4</item>
    </style>

    <style name="GreenTheme">
        <item name="light">#E9EFE3</item>
        <item name="darker">#0C290D</item>
        <item name="middle">#1F6826</item>
        <item name="middle_d">#457A48</item>
        <item name="middle_l">#7CA37E</item>
    </style>

    <style name="SkyTheme">
        <item name="light">#DEECF2</item> <!--bg-->
        <item name="darker">#0E2B3A</item> <!--notify-->
        <item name="middle">#31719A</item> <!--icon toolbar back and save-->
        <item name="middle_d">#5C859F</item>
        <item name="middle_l">#A1B3BF</item><!--icon add edit  fields-->
    </style>

    <style name="PeachTheme">
        <item name="light">#F3EFEB</item>
        <item name="darker">#352D12</item>
        <item name="middle">#C69624</item>
        <item name="middle_d">#8A7647</item>
        <item name="middle_l">#AFA385</item>
    </style>
    <!--    themes-->



</resources>